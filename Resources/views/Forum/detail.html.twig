{% extends 'base.html.twig' %}
{% trans_default_domain "sim_forum" %}

{% block body %}

    <div class="container">

        <hr>

        <ol class="breadcrumb">
            <li><a href="{{ path("sim_forum_index") }}">{{ "forums_index_link"|trans }}</a></li>
            <li class="active">{{ item.name|capitalize }}</li>
        </ol>

        <h3>
            {{ item.name|capitalize }}
            <a href="{{ path("sim_forum_post_create", {forum_id: item.id}) }}" class="btn btn-primary pull-right">{{ "send_post"|trans }}</a>
        </h3>


        <hr>




        <table class="table table-striped">

            <thead>
            <tr>
                <th>{{ "post_name"|trans }}</th>
                <th>{{ "created_by"|trans }}</th>
                <th>{{ "replies"|trans }}</th>
                <th>{{ "last_update_by"|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for item in pagination %}
                {% include 'SimettricSimpleForumBundle:Post:list-item.html.twig' with {item: item} %}
            {% else %}
            <tr>
                <td colspan="4">{{ "no_posts_published"|trans }}</td>
            </tr>
            {% endfor %}
            </tbody>

        </table>

        <hr>
        {{ knp_pagination_render(pagination) }}

        <hr>
    </div>


{% endblock %}
