{% extends 'base.html.twig' %}
{% trans_default_domain "sim_forum" %}
{% block body %}

    <div class="container">
        <hr>

        <ol class="breadcrumb">
            <li><a href="{{ path("sim_forum_index") }}">{{ "forums_index_link"|trans }}</a></li>
            <li class="active">{{ "search"|trans }}</li>
        </ol>


        <div class="row">

            <div class="col-sm-3">
                <form action="{{ path("sim_forum_search") }}">
                    <input placeholder="{{ "search"|trans }}" name="query" type="search" class="form-control" value="{{ app.request.get("query") }}">
                </form>
            </div>
        </div>

        <hr>




        <table class="table table-striped">

            <thead>
            <tr>
                <th>{{ "post_name"|trans }}</th>
                <th>{{ "created_by"|trans }}</th>
                <th>{{ "replies"|trans }}</th>
                <th>{{ "last_update_by"|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for item in pagination %}
                {% include 'SimettricSimpleForumBundle:Post:list-item.html.twig' with {item: item} %}
            {% else %}
                <tr>
                    <td colspan="4">{{ "no_posts_published"|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>

        </table>

        <hr>
        {{ knp_pagination_render(pagination, []) }}









    </div>


{% endblock %}


